<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.RegistrationActivity"
    android:background="@mipmap/background">

    <include layout="@layout/app_toolbar" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="368dp"
        android:layout_height="501dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue"
                android:layout_marginStart="@dimen/register_textview_margin_start"
                android:textSize="12sp"
                android:text="FIRST NAME"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:textSize="16sp"
                android:hint="First name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_textview_margin_top"
                android:layout_marginStart="@dimen/register_textview_margin_start"
                android:textColor="@color/light_blue"
                android:textSize="12sp"
                android:text="LAST NAME"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:textSize="16sp"
                android:hint="Last name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_textview_margin_top"
                android:layout_marginStart="@dimen/register_textview_margin_start"
                android:textColor="@color/light_blue"
                android:textSize="12sp"
                android:text="DATE OF BIRTH"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:textSize="16sp"
                android:hint="DD / MM / YY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_textview_margin_top"
                android:layout_marginStart="@dimen/register_textview_margin_start"
                android:textColor="@color/light_blue"
                android:textSize="12sp"
                android:text="EMAIL"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:textSize="16sp"
                android:hint="Email"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_textview_margin_top"
                android:layout_marginStart="@dimen/register_textview_margin_start"
                android:textColor="@color/light_blue"
                android:textSize="12sp"
                android:text="PASSWORD"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:textSize="16sp"
                android:hint="First name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_textview_margin_top"
                android:layout_marginStart="@dimen/register_textview_margin_start"
                android:textColor="@color/light_blue"
                android:textSize="12sp"
                android:text="CONFIRM PASSWORD"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_gray"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:textSize="16sp"
                android:hint="First name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_textview_margin_top"
                android:layout_marginStart="@dimen/register_textview_margin_start"
                android:textColor="@color/light_blue"
                android:textSize="12sp"
                android:text="MOBILE PHONE"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.hbb20.CountryCodePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_contentColor="@android:color/white"
                    app:ccp_autoDetectCountry="true"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:backgroundTint="@color/dark_gray"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_textview_margin_top"
                android:layout_marginStart="@dimen/register_textview_margin_start"
                android:textColor="@color/light_blue"
                android:textSize="12sp"
                android:text="ENABLE FACE / TOUCH ID"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:checkedButton="@id/radio_yes">

                <RadioButton
                    android:id="@+id/radio_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/light_blue"
                    android:text="YES"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:id="@+id/radio_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/light_blue"
                    android:layout_marginStart="20dp"
                    android:text="NO"
                    android:textColor="@android:color/white" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@color/light_blue"
        android:text="CONTINUE"
        app:layout_constraintTop_toBottomOf="@+id/scrollview"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>