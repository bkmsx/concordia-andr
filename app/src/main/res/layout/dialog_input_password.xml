<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginStart="60dp"
    android:layout_marginEnd="60dp"
    android:background="@drawable/white_round_bg">
    <TextView
        android:id="@+id/titleTxtInputPassword"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Verify Password"/>
    <TextView
        android:id="@+id/messageTxtInputPassword"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/gray0"
        android:text="Please input your account password"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/passwordEdtInputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="* * * *"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:backgroundTint="@color/blue2"
        android:textColor="@color/black"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/submitBtnInputPassword"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="SUBMIT"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue4_round_res_bg"/>
    <Button
        android:id="@+id/cancelBtnInputPassword"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="CANCEL"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gray_stroke_round_res_bg15"/>
</LinearLayout>