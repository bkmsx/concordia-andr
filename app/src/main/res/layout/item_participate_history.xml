<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black1_round_bg"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/projectIconImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/concordia_2"
        android:padding="10dp"
        android:background="@drawable/white_round_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:id="@+id/information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/projectIconImg"
        app:layout_constraintTop_toTopOf="@+id/projectIconImg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:minHeight="90dp">
        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="W GREEN PAY"/>
        <TextView
            android:id="@+id/addedDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/item_participate_normal_textsize"
            android:text="08 JUNE 2018"/>
        <TextView
            android:id="@+id/tokenAmountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/item_participate_normal_textsize"
            android:text="1000 tokens purchased"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/paymentAmountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/item_participate_normal_textsize"
            android:text="1.538 ETH paid"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/discountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/item_participate_normal_textsize"
            android:text="0% Discount"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/statusTxt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="PENDING PAYMENT"
        app:layout_constraintTop_toBottomOf="@+id/information"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/blue2_stroke_round_bg15"/>
    <Button
        android:id="@+id/btnParticipate"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="PARTICIPATE AGAIN"
        app:layout_constraintTop_toBottomOf="@+id/statusTxt"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="@dimen/item_participate_button_margintop"
        android:background="@drawable/blue4_round_res_bg15"/>
    <Button
        android:id="@+id/btnDetail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:background="@drawable/white_round_res_bg15"
        android:text="DETAILS"
        app:layout_constraintTop_toBottomOf="@+id/btnParticipate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="@dimen/item_participate_button_margintop"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/close"/>
</android.support.constraint.ConstraintLayout>