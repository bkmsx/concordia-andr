<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".transaction.ProjectDetailActivity">

    <include layout="@layout/app_toolbar"/>

    <capital.novum.concordia.customview.ParticipateHeader
        android:id="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@mipmap/pattern"/>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="SUBMIT"/>
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:background="@mipmap/pattern">
        <TextView
            android:id="@+id/tokenPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1 TOKEN = 0.001 ETH"
            android:layout_marginTop="15dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/normal_text_size"
            android:text="Amount of Tokens to buy:"/>
        <EditText
            android:id="@+id/tokenAmountEdt"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="10000"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:inputType="number"
            android:background="@drawable/light_blue_stroke_round_bg"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/amountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/dark_gray"
                android:text="Total ETH amount:"/>
            <TextView
                android:id="@+id/paymentAmountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2323"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/normal_text_size"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/white"
            android:text="Referral code:"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/referralCodeEdt"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:hint="JBDFDF"
            android:gravity="center"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/white"
            android:background="@drawable/blue_bottom_line_bg" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/amount_tokens_information"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>