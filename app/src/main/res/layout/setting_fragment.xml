<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#292929">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/profile"
            android:padding="20dp"
            android:background="@drawable/blue_stroke_circle_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="@+id/avatar"
            android:textColor="@color/white"
            android:text="TRUNG TIEN LAI"
            android:textStyle="bold"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tien@novum.capital"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/mobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:text="+84984217085"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/btnEditPhone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/mobileNumber"
            app:layout_constraintStart_toEndOf="@+id/mobileNumber"
            app:layout_constraintTop_toTopOf="@+id/mobileNumber"
            app:srcCompat="@mipmap/blue_pencil"
            android:background="@drawable/light_black_circle_res_bg"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setting_user_status_size"
            app:layout_constraintStart_toStartOf="@id/mobileNumber"
            app:layout_constraintTop_toBottomOf="@+id/mobileNumber"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/black_round_bg">
            <ImageView
                android:layout_width="@dimen/setting_user_status_check_size"
                android:layout_height="@dimen/setting_user_status_check_size"
                android:src="@mipmap/blue_check"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Verified"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/btnCven"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/blue_round_res_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/concordia_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CVEN EXCHANGE"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <capital.novum.concordia.customview.SettingItem
        android:id="@+id/touchSetting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/setting_item_margin"
        android:layout_marginEnd="@dimen/setting_item_margin"
        android:background="@drawable/gray_bottom_line_res_bg"/>
    <capital.novum.concordia.customview.SettingItem
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/setting_item_margin"
        android:layout_marginEnd="@dimen/setting_item_margin"
        android:background="@drawable/gray_bottom_line_res_bg"/>
    <capital.novum.concordia.customview.SettingItem
        android:id="@+id/updatePassport"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/setting_item_margin"
        android:layout_marginEnd="@dimen/setting_item_margin"
        android:background="@drawable/gray_bottom_line_res_bg"/>
    <capital.novum.concordia.customview.SettingItem
        android:id="@+id/walletList"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/setting_item_margin"
        android:layout_marginEnd="@dimen/setting_item_margin"
        android:background="@drawable/gray_bottom_line_res_bg"/>
    <capital.novum.concordia.customview.SettingItem
        android:id="@+id/participateHistory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/setting_item_margin"
        android:layout_marginEnd="@dimen/setting_item_margin"
        android:background="@drawable/gray_bottom_line_res_bg"/>
    <capital.novum.concordia.customview.SettingItem
        android:id="@+id/referralNetwork"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/setting_item_margin"
        android:layout_marginEnd="@dimen/setting_item_margin"
        android:background="@drawable/gray_bottom_line_res_bg"/>
    <Button
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/blue_round_res_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="14sp"
        android:text="SHARE WITH FRIENDS"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/white_round_res_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="14sp"
        android:text="LOGOUT"
        android:textColor="@color/black"/>
</LinearLayout>