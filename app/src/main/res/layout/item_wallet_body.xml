<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wallet_item_height"
    android:background="@drawable/blur_gray_rectangle_bg"
    android:gravity="center_vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="0xsdfafadfaddhfskdjffkdhfsfjhdskjhfhsdkfhs"
        android:maxLines="1"
        android:ellipsize="end"/>
    <ImageView
        android:id="@+id/editBtn"
        android:layout_width="@dimen/wallet_button_size"
        android:layout_height="@dimen/wallet_button_size"
        android:src="@mipmap/blue_pencil"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:id="@+id/deleteBtn"
        android:layout_width="@dimen/wallet_button_size"
        android:layout_height="@dimen/wallet_button_size"
        android:src="@mipmap/trash_blue"
        android:layout_marginStart="15dp"/>
</LinearLayout>