<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_toolbar"/>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SHARE WITH FRIENDS"
        android:textColor="@color/white"
        android:background="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/pattern"
            android:gravity="center_horizontal"
            android:padding="20dp">
            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/concordia_2"
                android:padding="20dp"
                android:background="@drawable/white_round_bg"/>
            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W GREEN PAY"
                android:textColor="@color/light_blue"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/pattern"
            android:alpha="0.9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/priceTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/WhiteText"
                    android:textSize="14sp"
                    android:text="1 TOKEN = 0.00012323 ETH"/>
                <TextView
                    android:id="@+id/tokenAmountTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/WhiteText"
                    android:layout_marginTop="20dp"
                    android:text="Tokens purchased: 90000"/>
                <TextView
                    android:id="@+id/paymentMethodTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/WhiteText"
                    android:text="Payment method: ETH"/>
                <TextView
                    android:id="@+id/paymentAmountTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/WhiteText"
                    android:text="Total amount: 13.4234324"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/WhiteText"
                    android:text="Payment send to:"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/blur_gray_round_bg"
                    android:padding="20dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GrayText"
                        android:text="BANK NAME"
                        android:layout_marginTop="0dp"/>
                    <TextView
                        android:id="@+id/bankNameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/WhiteText"
                        android:text="Oversea-Chinese Banking Corporation Limited"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GrayText"
                        android:text="SWIFT CODE"/>
                    <TextView
                        android:id="@+id/swiftCodeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/WhiteText"
                        android:text="OCBCSGSG"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GrayText"
                        android:text="BANK ADDRESS"/>
                    <TextView
                        android:id="@+id/bankAddressTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/WhiteText"
                        android:text="65 Chulia Street, OCBC Centre, Singapore 049513"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GrayText"
                        android:text="ACCOUNT NAME"/>
                    <TextView
                        android:id="@+id/accountNameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/WhiteText"
                        android:text="W Global Investment Pte, Ltd."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GrayText"
                        android:text="ACCOUNT NO."/>
                    <TextView
                        android:id="@+id/accountNumberTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/WhiteText"
                        android:text="503232323"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GrayText"
                        android:text="BUSINESS ADDRESS"/>
                    <TextView
                        android:id="@+id/businessAddressTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/WhiteText"
                        android:text="54 East Coast Terrace #02-03 Singapore 458949"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>